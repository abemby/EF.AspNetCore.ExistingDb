@{
    ViewData["Title"] = "Delete Post";
}

<h2>
    @ViewData["Title"] for <   Url: @ViewData["BlogUrl"] - Id: @ViewData["BlogId"]    >
</h2>


<h3>Are you sure you want to delete this ?</h3>

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PostId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PostId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-postId="@Model.PostId" asp-route-blogId="@ViewData["BlogId"]" asp-route-blogUrl="@ViewData["BlogUrl"]">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index" asp-route-blogId="@ViewData["BlogId"]" asp-route-blogUrl="@ViewData["BlogUrl"]">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
